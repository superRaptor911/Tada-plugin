{
    "manifest_version": 3,
    "name": "My TS Chrome Extension",
    "version": "1.0",
    "description": "Chrome extension using TypeScript",
    "action": {
      "default_popup": "src/popup.html",
      "default_icon": {
        "16": "icon.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["content.css"]
      }
    ],
    "permissions": ["scripting", "storage", "activeTab", "tabs"]
  }
  